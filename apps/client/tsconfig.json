{
  "compilerOptions": {
    "outDir": "./public/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2019",
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./src/typeDefs"],
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
